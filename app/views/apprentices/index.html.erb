<div class="container reporting">
  <h1>Current Apprentices</h1>

  <div class="actions">
    <%= link_to 'Add Apprentice', new_apprentice_path, :class => "new-applicant-link button primary" if admin? %>
  </div>

  <div class="row apprentices">
    <div class="column full">

      <table>
        <h2>Apprentices</h2>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Mentor(s)</th>
          </tr>
        </thead>
        <tbody>
          <% @apprentices.each do |student| %>
            <tr>
              <td><%= student.name %></td>
              <td><%= student.email %></td>
              <td><%= display_date(student.start_date) %></td>
              <td><%= display_date(student.end_date) %></td>
              <td><%= student.mentor %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
