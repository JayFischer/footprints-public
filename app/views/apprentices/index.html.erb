<div class="container reporting">
  <h1>Current Apprentices</h1>

  <div class="actions">
    <%= link_to 'Add Apprentice', new_apprentice_path, :class => "new-applicant-link button primary" if admin? %>
  </div>

  <div class="row apprentices">
    <div class="column full">
      <table>
        <h2>Apprentices</h2>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Mentor(s)</th>
          </tr>
        </thead>
        <tbody>
          <% @apprentices.each do |apprentice| %>
            <tr>
              <td><%= apprentice.name %></td>
              <td><%= apprentice.email %></td>
              <td><%= display_date(apprentice.start_date) %></td>
              <td>
                <a href="/apprentices/<%= apprentice.id %>">
                  <%= display_date(apprentice.end_date) %>
                </a>
              </td>
              <td><%= apprentice.mentor %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>