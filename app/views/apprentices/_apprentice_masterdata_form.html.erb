<div class='form-whole-width'>
  <%= form.label :name, 'Apprentice Name' %>
  <%= form.text_field :name, id: 'apprentice-name' %>

  <%= form.label :email, 'Apprentice Email' %>
  <%= form.text_field :email, id: 'apprentice-email' %>

  <%= form.label :skill_level, 'Skill Level' %>
  	<div class="actions">
	  <%= form.radio_button :skill_level, :checked => false %>
	  <%= form.label :skill, 'Student', :value => 1, :class => 'inline-label' %><br/>

	  <%= form.radio_button :skill_level, :checked => false %>
	  <%= form.label :skill,  'Resident', :value => 2,:class => 'inline-label' %>
	</div>
	<br />
  <%= form.label :start_date, 'Start Date' %>
  <%= form.text_field :start_date, id: 'start-date' %>

  <%= form.label :end_date, 'End Date' %>
  <%= form.text_field :end_date, id: 'end-date' %>
</div>